{
    "name": "video",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/video/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "target": "node",
                "compiler": "tsc",
                "outputPath": "dist/apps/video",
                "outputFileName": "index.js",
                "main": "apps/video/src/main.ts",
                "tsConfig": "apps/video/tsconfig.app.json",
                "assets": ["apps/video/src/assets"],
                "isolatedConfig": true,
                "webpackConfig": "apps/video/webpack.config.js"
            },
            "configurations": {
                "development": {},
                "production": {}
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "video:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "video:build:development"
                },
                "production": {
                    "buildTarget": "video:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/video/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/video/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "docker-build": {
            "dependsOn": ["build"],
            "command": "docker build -f apps/video/Dockerfile . -t video"
        }
    },
    "tags": []
}
