# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build video`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t video`.
FROM docker.io/node:lts-alpine

WORKDIR /app

RUN apk update && apk add ffmpeg

COPY package.json package-lock.json ./video/

RUN addgroup --system video-service && \
          adduser --system -G video-service video-service

COPY dist/apps/video video
RUN chown -R video-service:video-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix video --omit=dev -f install

CMD [ "node", "video" ]
