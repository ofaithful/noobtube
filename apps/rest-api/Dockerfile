FROM docker.io/node:lts-alpine

WORKDIR /app
COPY package.json package-lock.json ./rest-api/

RUN addgroup --system rest-api && \
          adduser --system -G rest-api rest-api

COPY dist/apps/rest-api rest-api
RUN chown -R rest-api:rest-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix rest-api --omit=dev -f install

CMD [ "node", "rest-api" ]
